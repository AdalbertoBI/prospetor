{
  "name": "pmg-prospector",
  "version": "1.0.0",
  "description": "Sistema Inteligente de Prospecção PMG",
  "main": "index.html",
  "scripts": {
    "dev": "live-server --port=3000 --open=/",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint assets/js/**/*.js",
    "format": "prettier --write \"**/*.{js,html,css}\"",
    "validate": "npm run lint && npm run test",
    "build": "npm run validate && npm run minify",
    "minify": "npm run minify:css && npm run minify:js",
    "minify:css": "cleancss -o assets/css/style.min.css assets/css/style.css",
    "minify:js": "uglifyjs assets/js/main.js -o assets/js/main.min.js",
    "serve": "http-server . -p 3000 -o",
    "start": "npm run serve"
  },
  "devDependencies": {
    "live-server": "^1.2.2",
    "http-server": "^14.1.1",
    "jest": "^29.5.0",
    "eslint": "^8.42.0",
    "prettier": "^2.8.8",
    "clean-css-cli": "^5.6.2",
    "uglify-js": "^3.17.4",
    "@jest/globals": "^29.5.0"
  },
  "keywords": ["prospecção", "vendas", "PMG", "IA"],
  "author": "PMG Atacadista",
  "license": "MIT"
}
